<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarWars</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StarWars.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="star-wars-header">
        <nav class="navbar navbar-expand-sm navbar-dark navbar-glow">
            <div class="container-fluid">
                <a class="navbar-brand glowing-text" asp-area="" asp-controller="Home" asp-action="Index">StarWars</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1">
        <div class="container pb-3">
            @RenderBody()
        </div>
    </main>

    <footer class="star-wars-footer mt-auto">
        <div class="container text-center">
            &copy; 2024 - <span class="glowing-text">StarWars</span> -
            <a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .star-wars-header {
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.1);
        padding: 10px 0;
    }

    .navbar-dark .navbar-brand {
        font-family: 'Star Jedi', sans-serif;
        font-size: 32px;
        color: #1e90ff;
        text-shadow: 0 0 10px rgba(30, 144, 255, 0.8), 0 0 20px rgba(30, 144, 255, 0.5);
    }

    .navbar-dark .nav-link {
        font-size: 18px;
        transition: color 0.3s ease-in-out;
    }

    .navbar-dark .nav-link:hover {
        color: #1e90ff;
        text-shadow: 0 0 10px rgba(30, 144, 255, 0.8);
    }

    .star-wars-footer {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        padding: 15px;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        text-align: center;
        color: #fff;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.7);
    }

    .glowing-text {
        color: #1e90ff;
        text-shadow: 0 0 10px rgba(30, 144, 255, 1), 0 0 20px rgba(30, 144, 255, 0.8);
    }

    .footer-link {
        color: #1e90ff;
        text-decoration: none;
        transition: color 0.3s;
    }

    .footer-link:hover {
        color: #0a74da;
    }
</style>
