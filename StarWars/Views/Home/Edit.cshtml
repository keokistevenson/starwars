@model StarshipImage

@section Styles {
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
}

<h2 class="retrofitting-title">Starship Retrofitting Center</h2>

<div class="image-wrapper">
    <div class="image-container">
        <p><strong>Current Configuration:</strong></p>
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" alt="@Model.Name" class="current-image" />
        }
        else
        {
            <p>No image available.</p>
        }
    </div>
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="edit-form">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="uploadedFile">Upload New Apparatus</label>
        <input type="file" name="uploadedFile" class="form-control mb-3" />
    </div>

    <button type="submit" class="btn-glow btn-primary">Update Starship</button>
    <a href="/Home/Index" class="btn-cancel">Cancel</a>
</form>

 