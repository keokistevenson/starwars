@model List<SelectStarship>

@section Styles {
    <link rel="stylesheet" href="~/css/create.css" asp-append-version="true" />
}

<h2 class="star-wars-title">Starship Factory</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="star-wars-form">
    <div class="form-group mb-4">
        <label for="StarshipId">Select Starship Type</label>
        <select id="starshipSelect" name="StarshipId" class="form-control" required>
            <option value="">-- Select a Starship --</option>
            @foreach (var starship in Model)
            {
                <option value="@starship.StarshipId" data-name="@starship.Name">@starship.Name</option>
            }
        </select>
    </div>

    <!-- Hidden input field to store the selected starship name -->
    <input type="hidden" id="Name" name="Name" />

    <div class="form-group mb-4">
        <label for="uploadedFile">Upload Configuration</label>
        <input type="file" name="uploadedFile" class="form-control" required />
    </div>

    <button type="submit" class="btn-glow btn-primary">Create</button>
</form>

<script>
    // JavaScript to update the hidden Name input on dropdown change
    document.getElementById('starshipSelect').addEventListener('change', function () {
        const selectedOption = this.options[this.selectedIndex];
        const starshipName = selectedOption.getAttribute('data-name');
        document.getElementById('Name').value = starshipName;
    });
</script>

